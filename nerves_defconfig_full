# Input device support (required for keyboard/mouse in Weston)
BR2_PACKAGE_LIBINPUT=y
BR2_PACKAGE_XKEYBOARD_CONFIG=y

# ================================================
# GPU: Proprietary Mali G610 blob (g24p0) + hook library
# ================================================
# JeffyCN/mirrors g24p0 blob with libmali-hook.so for EGL 1.5 compatibility
BR2_PACKAGE_ROCKCHIP_LIBMALI_G610=y
BR2_PACKAGE_ROCKCHIP_LIBMALI_G610_WAYLAND=y

# libepoxy (needed by Weston GL renderer and WPE)
BR2_PACKAGE_LIBEPOXY=y

# DISABLED: Mesa3D — using proprietary Mali blob instead
# BR2_PACKAGE_MESA3D is not set

# ================================================
# Browser: WPE WebKit + Cog (GPU-accelerated via Mali EGL)
# ================================================
BR2_PACKAGE_LIBWPE=y
BR2_PACKAGE_WPEBACKEND_FDO=y
BR2_PACKAGE_WPEWEBKIT=y
BR2_PACKAGE_WPEWEBKIT_MULTIMEDIA=y
